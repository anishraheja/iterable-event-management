<%= form_with model: @event do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: "form-label"%>
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :event_type %>
    <%= f.text_field :event_type, class: 'disabled form-control', value: event_type_display(@event.event_type), disabled: true  %>
    <%= f.hidden_field :event_type %>
  </div>

  <div class="mb-3">
    <%= f.label :event_code, class: "form-label"%>
    <%= f.text_field :event_code, class: 'form-control' %>
  </div>
 
  <div>
    <%= f.submit class: 'btn btn-primary mb-3' %>
  </div>
<% end %>
