<div class="main-container border border-dark-subtle p-2">
  <h1>Events</h1>
  <div class="list-group">
    <% @events.each do |event| %>
      <div class="event-list_items mt-2">
        <%= link_to event.name, event, class: 'list-group-item list-group-item-action custom_item' %>
        <% if event.users.include? current_user %>
          <%= button_to "Delete", event_path(event), method: :delete, class: "btn btn-danger" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
